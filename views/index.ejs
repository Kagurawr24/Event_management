<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Supermarket App</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Event Management</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/addEvent">Add new event</a>
            </li> 
          </ul>
        </div>
      </div>
    </nav>
  <div class="container">
    <br>
    <div class="text-center"><h2>Events in Event Management Database</h2></div>
    <br>
  
    <table class="table table-hover small text-center">
      <thead>
          <tr>
            <th width="100">Product Name</th>
            <th width="100">Product Image</th>
            <th width="50">Quantity</th>
            <th width="50">Price</th>
          </tr>
      </thead>
      <tbody>
        <% for(let i=0; i < events.length; i++) { %>
          <tr>
            <td><a href="/event/<%= events[i].eventId %>" ><%= events[i].eventName %></a></td>
            <!-- <td><img src = "image/<%= events[i].image %>" width="20%"></td> -->
            <td><%= events[i].eventName %></td>
            <td><%= events[i].eventTime %></td>
            <td><%= events[i].eventDate %></td>
            <!-- Edit Link -->
            <td><a href=/editEvent/<%= events[i].eventId %>Edit</a></td>
            <!-- Delete Link -->
            <td><a href=/deleteEvent/<%= events[i].eventId %> onclick="return confirm
            ('Are you sure you want to delete this event?')">Delete</a></td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>