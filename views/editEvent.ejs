<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
        <title>Event Management</title>
    </head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">Event Management</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/addEvent">Event Management</a>
              </li> 
            </ul>
          </div>
        </div>
    </nav>

    <div class="container">
        <br>
        <div class="text-center"><h2>Update Event</h2></div>
        <br>
        <div class="text-center">
          <% if (product) { %> 
            <form action="/editEvent/<%= student.studentId %>" method="POST">
                <label for="name">Student Name:</label><br>
                <input type="text" id="name" name="name" required><br><br>

                <label for="DoB">DoB:</label><br>
                <input type="date" id="dob" name="DoB" min="0" step="1"required><br><br>

                <label for="contact">contact:</label><br>
                <input type="number" id="contact" name="contact" min="0" step="0.01" required><br><br>

                <label for="image">Image:</label><br>
                <input type="text" id="image" name="image" required><br><br>

                <button type="submit">Add Event</button>
            </form>
          <% } else { %>
              <p>No event found.</p>
          <% } %>
          <a href ="/">Back</a>
        </div>
    </div>
</body>
</html>